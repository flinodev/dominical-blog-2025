---
import { type CollectionEntry, getCollection } from "astro:content";
// import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import Note from "@/components/note/Note.astro";
import { getAllPosts } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";

// Posts
const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = allPosts
	.sort(collectionDateSort)
	.slice(0, MAX_POSTS) as CollectionEntry<"post">[];

// Notes
const MAX_NOTES = 2;
const allNotes = await getCollection("note");
const latestNotes = allNotes.sort(collectionDateSort).slice(0, MAX_NOTES);

// Students
const allStudents = [
	{id: "dorcas", name: "Dorcas", description: "Bondadosa y servicial", points: 32},
	{id: "daniel", name: "Daniel", description: "Firme en su fe", points: 48},
	{id: "jeremias", name: "Jeremías", description: "Profeta perseverante en lágrimas", points: 31},
	{id: "isaias", name: "Isaías", description: "Profeta visionario", points: 16},
	{id: "maria", name: "María (hermana de Moisés)", description: "Profetiza y líder en el cántico", points: 46},
	{id: "samson", name: "Samson", description: "Nazareo consagrado", points: 14},
	{id: "jacob", name: "Jacob", description: "Perseveró en la oración", points: 57},
	{id: "debora", name: "Debora", description: "Jueza y profetiza", points: 53},
	{id: "elias", name: "Elías", description: "Profeta celoso por Dios", points: 55},
]
---

<PageLayout meta={{ title: "Home" }}>
	<!-- Hero section -->
	<!-- Background blur -->
	<div class="absolute top-0 left-1/2 md:top-[-15%] -ml-[50vw] min-h-screen w-screen pointer-events-none blur-3xl opacity-50 overflow-x-hidden">
		<div class="absolute top-[10%] right-[-40%] w-[65%] h-full bg-gradient-to-b from-purple-300 via-blue-300 to-transparent rounded-full opacity-30 dark:opacity-10"></div>
		<div class="absolute top-[10%] left-[-40%] w-[65%] h-full bg-gradient-to-b from-blue-300 via-pink-300 to-transparent rounded-full opacity-30 dark:opacity-10"></div>
		<div class="absolute top-[-20%] left-[-50%] w-[85%] h-full bg-gradient-to-b from-indigo-300 via-orange-300 to-transparent rounded-full opacity-60 dark:opacity-10"></div>
		<div class="absolute top-[-20%] right-[-50%] w-[85%] h-full bg-gradient-to-b from-orange-300 via-indigo-300 to-transparent rounded-full opacity-60 dark:opacity-10"></div>
	</div>
	<section class="max-w-xl mx-auto relative flex items-center justify-center h-screen -mt-24">
		<div class="w-full text-center">
			<p style="color: brown;"> <strong>Importante:</strong> Nuestros hermanos que ya contestaron el cuestionario de la 
				<strong>
					<a href="https://docs.google.com/forms/d/e/1FAIpQLScKFYzTWhV1GXzKX0ANn3eH70vMiDHkGLSDHbKZpMHBouA18w/viewform?usp=sharing&ouid=112915739176438052476">Lección #18 "La justificación en la iglesia",</a>
				</strong>
				los invitamos a <strong>realizarlo nuevamente</strong>, ya que este no contenía el campo de <i>"Nombre del alumno"</i> 
				y por lo tanto no se pudo registrar sus respuestas. Disculpen las molestias y Dios les pague por su comprensión.
			</p>
			<br>
			<br>
			<span class="title text-3xl bg-gradient-to-r from-accent-two/85 via-accent-one/85 to-accent-two/85 dark:from-accent-two dark:via-accent-one dark:to-accent-two bg-clip-text text-transparent">
				Escuela Dominical 2025
			</span>
			<p class="mt-4 mb-4 text-lg font-medium">
				Espacio de trabajo dedicado al reforzamiento del conocimiento adquirido en la impartición de las lecciones de la Guía de Estudio de Escuela Dominical 2025.
			</p>
			<!-- <p class="mt-4 mb-4 text-lg font-medium">
				Aquí se colocará el material de estudio complementario a nuestra guía, así como actividades diversas como cuestionarios, guías y exámenes.
			</p> -->
			<!-- <div class="flex justify-center mb-4">
				<SocialList />
			</div> -->
			<div class="flex justify-center space-x-4 mt-4">
				<a href="/posts/" class="relative flex items-center justify-center h-8 px-4 rounded-lg shadow-lg hover:brightness-110 transition-all bg-gradient-to-r from-accent-one to-accent-two">
					<span class="text-bgColor font-semibold">
						Lecciones
					</span>
				</a>

				<a href="/notes/como-empezar/" class="relative flex items-center justify-center h-8 px-4 rounded-lg shadow-lg bg-special-lighter hover:brightness-110 hover:bg-special-lightest">
					<span class="bg-clip-text text-transparent font-semibold bg-gradient-to-r from-accent-one to-accent-two">
						Cómo iniciar
					</span>
				</a>
			</div>
		</div>
	</section>

	<section aria-label="Student list" class="'mt-[-100vh] pt-[100vh]'">
		<h2 class="title mb-6 text-xl text-accent-two">
			Seguimiento
		</h2>
		<ul class="space-y-4 md:space-y-2 mb-12" role="list">
			{
				allStudents.sort((a, b) => b.points - a.points).map((student, idx) => (
					<li class="gap-2 sm:grid-cols-[auto_1fr]">
						<div class="flex flex-col grow sm:flex-row sm:items-center sm:justify-between">
							<div class="citrus-link font-medium text-accent-base mt-2.5">
								<a data-astro-prefetch href={`/notes/evaluations/${student.id}/`}>
									#{idx + 1}.- {student.name}
								</a>
							</div>
							<p>{student.description}</p>
							<div class="shrink-0 text-lighter text-sm sm:order-2 sm:text-right">
								{student.points} puntos
							</div>
							
						</div>
					</li>
				))
			}
		</ul>
	</section>

	<!-- Posts Section -->
	<section aria-label="Blog post list" class="'mt-[-100vh] pt-[100vh]'">
		<h2 class="title mb-6 text-xl text-accent-two">
			<a href="/posts/">Lecciones Recientes</a>
		</h2>
		<ul class="space-y-4 md:space-y-2" role="list">
			{
				allPostsByDate.map((p) => (
					<li class="gap-2 sm:grid-cols-[auto_1fr]">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>

	<!-- Notes Section -->
	{
		latestNotes.length > 0 && (
			<section class="mt-12">
				<h2 class="title mb-6 text-accent-two">
					<a href="/notes/">Notas</a>
				</h2>
				<div class="grid grid-cols-1 gap-8 sm:grid-cols-2">
					{
						latestNotes.map((note) => (
							<div>
								<Note note={note} as="h4" isPreview />
							</div>
						))
					}
				</div>
			</section>
		)
	}

